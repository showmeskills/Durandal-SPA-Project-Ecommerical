{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "module": "amd",
    "lib": ["dom", "scripthost", "es2015", "es2015.promise", "es2015.core"],
    "noImplicitAny": false,
    "sourceMap": true,
    "removeComments": false,
    "noEmitOnError": true,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "noImplicitUseStrict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowUnreachableCode": false,
    "esModuleInterop":true,
    "baseUrl": "src/app"
  },
  "exclude":[
    "src/lib",
    "node_modules"
  ]
}